#:kivy 1.0

WindowManager:
    MainScreen:
    FileScreen:

<MainScreen>:
    name: 'MainScreen'

    FloatLayout:
        Label:
            text: 'Python Runtime Comparer'
            font_size: 35
            size_hint: 1, 0.1
            pos_hint: {'y': 0.85}
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.125
            pos_hint: {'y': 0.65, 'x': 0.25}

            Label:
                text: 'Program to run'
                font_size: 20

            BoxLayout:
                orientation: 'horizontal'

                TextInput:
                    id: input_file_text_input
                    multiline: False

                Button:
                    text: 'Select'
                    size_hint: 0.25, 1
                    on_press:
                        root.choose_file('runner')
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'FileScreen'
        
        GridLayout:
            cols: 2
            size_hint: 0.9, 0.1
            spacing: 20
            pos_hint: {'x': 0.05, 'y': 0.5}

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Input File'
                    font_size: 18

                BoxLayout:
                    orientation: 'horizontal'

                    TextInput:
                        id: input_file_text_input
                        multiline: False

                    Button:
                        text: 'Select'
                        size_hint: 0.25, 1
                        on_press:
                            root.choose_file('input')
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'FileScreen'
            
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Output File'
                    font_size: 18

                BoxLayout:
                    orientation: 'horizontal'

                    TextInput:
                        id: input_file_text_input
                        multiline: False

                    Button:
                        text: 'Select'
                        size_hint: 0.25, 1
                        on_press:
                            root.choose_file('output')
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'FileScreen'

<FileScreen>:
    name: 'FileScreen'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            spacing: 10

            Button:
                size_hint: 0.05, 1
                text: '<'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'MainScreen'

            Label:
                text: 'Choose input file'
                font_size: 25
                text_size: self.size
                halign: 'left'
                valign: 'middle'

        FileChooserListView:
            path: 'C:\\Users'
            on_selection: root.selectFile(self.selection)
