#:kivy 1.0

WindowManager:
    MainScreen:
    FileScreen:

<MainScreen>:
    name: 'MainScreen'

    FloatLayout:
        Label:
            text: 'Python Runtime Comparer'
            font_size: 35
            size_hint: 1, 0.1
            pos_hint: {'y': 0.85}
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.25
            pos_hint: {'y': 0.45, 'x': 0.25}
            spacing: 20

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: ' Program to run'
                    font_size: 20
                    text_size: self.size
                    halign: 'left'

                BoxLayout:
                    orientation: 'horizontal'

                    TextInput:
                        id: runner_file_text_input
                        multiline: False
                        on_text:
                            root.update_start_button_text()

                    Button:
                        text: 'Select'
                        size_hint: 0.25, 1
                        on_press:
                            root.choose_file('runner')
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'FileScreen'
                
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: ' Input File'
                    font_size: 20
                    text_size: self.size
                    halign: 'left'

                BoxLayout:
                    orientation: 'horizontal'

                    TextInput:
                        id: input_file_text_input
                        multiline: False
                        on_text:
                            root.update_start_button_text()

                    Button:
                        text: 'Select'
                        size_hint: 0.25, 1
                        on_press:
                            root.choose_file('input')
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'FileScreen'

        Button:
            id: start_button
            text: 'Select all 2 files to continue'
            size_hint: 1, 0.1
            on_release:
                root.start_plot()


<FileScreen>:
    name: 'FileScreen'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            spacing: 10

            Button:
                size_hint: 0.05, 1
                text: '<'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'MainScreen'

            Label:
                text: 'Choose input file'
                font_size: 25
                text_size: self.size
                halign: 'left'
                valign: 'middle'

        FileChooserListView:
            id: file_chooser
            path: 'C:\\Users'
            on_selection: root.selectFile(self.selection)
